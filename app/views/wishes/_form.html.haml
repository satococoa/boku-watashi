= form_for @wish do |f|
  -if @wish.errors.any?
    #error_explanation
      %h2= "#{pluralize(@wish.errors.count, "error")} prohibited this wish from being saved:"
      %ul
        - @wish.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.text_field :cost, :placeholder => t(:cost)
  .field
    = f.text_field :purpose, :placeholder => t(:purpose)
  .actions
    = f.submit t(:save)
