= form_for @wish do |f|
  -if @wish.errors.any?
    #error_explanation
      %h2= "#{pluralize(@wish.errors.count, "error")} prohibited this wish from being saved:"
      %ul
        - @wish.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :child_id
    = f.text_field :child_id
  .field
    = f.label :cost
    = f.text_field :cost
  .field
    = f.label :purpose
    = f.text_field :purpose
  .field
    = f.label :status
    = f.text_field :status
  .actions
    = f.submit 'Save'
