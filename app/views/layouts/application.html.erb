<!DOCTYPE html>
<html>
<head>
  <title>ぼくの / わたしのおこづかい</title>
  <%#= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
  <link rel="stylesheet" href="http://code.jquery.com/mobile/1.0a4.1/jquery.mobile-1.0a4.1.min.css" />
  <script src="http://code.jquery.com/jquery-1.5.2.min.js"></script>
  <script src="http://code.jquery.com/mobile/1.0a4.1/jquery.mobile-1.0a4.1.min.js"></script>
</head>
<body>
  <div data-role="page" id="container">
    <div id="user_nav">
      <% if current_user %>
        <div data-role="header" id="header">
          <% if current_user.admin? %>
            <%= link_to current_user.email, :admin_root, :'data-icon' => 'home' %>
            <h1>ぼくの / わたしのおこづかい</h1>
            <%= link_to 'ログアウト', admin_logout_path, :'data-icon' => 'check' %>

          <% else %>
            <%= link_to current_user.nickname, :child_root, :'data-icon' => 'home' %>
            <h1>ぼくの / わたしのおこづかい</h1>
            <%= link_to 'ログアウト', child_logout_path, :'data-icon' => 'check' %>
          <% end %>
        </div>
      <% else %>
        <div data-role="header" id="header">
          <a href="/" data-icon="home">Home</a>
          <h1>ぼくの / わたしのおこづかい</h1>
        </div>
      <% end %>
    </div><!-- /user_nav -->

    <div id="main" data-role="content">
      <%= yield %>
    </div><!-- /main -->
  </div><!-- /container -->
</body>
</html>
