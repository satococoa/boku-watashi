= form_for [:admin, @child] do |f|
  -if @child.errors.any?
    #error_explanation
      %h2= "#{pluralize(@child.errors.count, "error")} prohibited this child from being saved:"
      %ul
        - @child.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.text_field :childname, :placeholder => t(:childname)
  .field
    = f.password_field :password, :placeholder => t(:password)
  .field
    = f.password_field :password_confirmation, :placeholder => t(:password_confirmation)
  .field
    = f.text_field :nickname, :placeholder => t(:nickname)
  .field
    = f.text_field :pocket, :placeholder => t(:pocket)
  .actions
    = f.submit t(:save)
